---
import { getCollection } from 'astro:content';

// Get homepage configuration
const [homepageConfig] = await getCollection('config', ({ id }) => id === 'homepage.md');
const { hero } = homepageConfig.data;
---

<div class="hero min-h-[60vh]">
  <div class="w-full flex flex-col">
    <div class="container mx-auto px-4 py-32">
      {hero.badge && <div class="badge badge-outline badge-lg">{hero.badge}</div>}
      <h1 class="text-4xl md:text-5xl xl:text-7xl font-semibold brightness-150 mt-4">
        {hero.heading.prefix}<span class="text-primary">{hero.heading.highlight}</span>{hero.heading.suffix}
        <br />
        {hero.subheading}
      </h1>
      <p class="text-xl md:text-2xl mt-6 text-base-content/80 max-w-2xl">
        {hero.description}
      </p>
      <div class="mt-8">
        <a href={hero.cta.href} class="btn btn-primary btn-lg">{hero.cta.text}</a>
      </div>
    </div>
  </div>
</div>
