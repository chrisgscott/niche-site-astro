---
import type { CollectionEntry } from 'astro:content';
import ContentCard from './ContentCard.astro';

interface Props {
  content: CollectionEntry<'posts'>[] | CollectionEntry<'articles'>[];
  title: string;
  className?: string;
}

const { content, title, className = "" } = Astro.props;
---

{content.length > 0 && (
  <section class={`mt-16 ${className}`}>
    <h2 class="text-3xl font-bold text-center mb-8">{title}</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {content.map(item => (
        <ContentCard content={item} />
      ))}
    </div>
  </section>
)}
